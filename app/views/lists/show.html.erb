<div class="banner d-inline-flex justify-content-between">
  <h2>Movie Lists</h2>
  <%= link_to lists_path, class:"text-decoration-none" do %>
    <button class="btn btn-outline-primary m-3">Back</button>
  <% end %>
</div>



<div class="container">

  <h2 class="my-3"><strong><%= @list.name %></strong></h2>

  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="card col-4">
        <div class="d-inline-flex justify-content-between w-100">
          <p><strong><%= movie.title %></strong> (<%= movie.rating %>)</p>

          <%= link_to bookmark_path(movie.bookmarks.find_by(list_id: @list)), class:'text-decoration-none', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>

        </div>
        <img src="<%= movie.poster_url %>" alt="">
        <p><%= movie.overview %></p>

      </div>
    <% end %>
  </div>


  <%= link_to new_list_bookmark_path(@list), class:"text-decoration-none" do %>
    <button class="btn btn-outline-primary m-3">New Bookmark</button>
  <% end %>
</div>
